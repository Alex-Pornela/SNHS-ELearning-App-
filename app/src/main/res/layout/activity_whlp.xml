                    android:id="@+id/nine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nine_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/nine_bg"
                    app:layout_constraintEnd_toEndOf="@+id/nine_bg"
                    app:layout_constraintHorizontal_bias="0.046"
